<div class="modal fade" id="deployCertificateModal" role="dialog" aria-labelledby="deployCertificateModal" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" >Deploy Certificate to Node</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container">

                    <div class="form-group row">
                        <label for="nodeSelect" class="col-sm-3 col-form-label">Node</label>
                        <div class="col-sm-10">
                            <select class="form-control" name="nodeSelect" id="nodeSelect" style="width:280px;"></select>
                        </div>
                    </div>

                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="deployCertificateButton" onclick="ViewCertificate.DeployToNode()" data-dismiss="modal">Deploy</button>
            </div>
        </div>
    </div>
</div>