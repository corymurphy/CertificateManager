@{
    ViewData["Title"] = "Script";
    Layout = "~/Views/Shared/_Layout.full.cshtml";
}

<!-- Breadcrumbs -->
<ol class="breadcrumb">
    <li class="breadcrumb-item active">Script Details</li>
</ol>

<div class="alert alert-danger" id="error-alert" style="display:none;"></div>

<div class="alert alert-success" id="success-alert" style="display:none;">
    Node successfully edited
</div>

<div class="background-panel">

    <div class="container">
        <div class="form-group">
            <label for="id">Id</label>
            <input class="form-control" type="text" placeholder="Readonly input here…" readonly id="id" name="id" value="@ViewBag.NodeId">
        </div>

        <div class="form-group">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name">
        </div>

        <div class="form-group">
            <label for="code">Code</label>
            <textarea class="form-control" id="code" rows="12"></textarea>
        </div>


        <div class="form-group">
            <label for="code">Code</label>
        </div>


        <div class="form-group">
            <button class="btn btn-primary" onclick="ScriptDetails.Save();">Save</button>
        </div>
    </div>




</div>


@section Script{

    <script>
        $(document).ready(function () {
            ScriptDetails.PageLoad();
        });
    </script>
}
