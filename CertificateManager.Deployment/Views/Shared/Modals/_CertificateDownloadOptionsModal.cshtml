<div class="modal fade" id="certificateDownloadOptionsModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Download Certificate</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <ul style="list-style-type:none">
                    <li>
                        <div class="cmgr-radio-btn-area-lg" id="cer-background">
                            <input type="radio" name="download-option" id="cer-radio" style="margin-top:15px;overflow:visible;">Certificate Only (CER)
                            <ul style="list-style-type:none">
                                <li><input type="radio" id="download-cer-option-b64" name="download-option-encoding" disabled="disabled">Base64 Encoding</li>
                                <li><input type="radio" id="download-cer-option-der" name="download-option-encoding" disabled="disabled">DER Binary Encoding</li>
                            </ul>
                        </div>
                    </li>
                    <li>
                        <div class="cmgr-radio-btn-area-sm" id="pfx-background">
                            <input type="radio" name="download-option" id="pfx-radio" style="margin-top:15px">Certificate and Include Private Key (PFX PKCS#12)
                        </div>
                    </li>
                    <li>
                        <input type="checkbox" id="include-chain-checkbox" style="margin-top:15px">Include Chain
                    </li>
                </ul>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" id="download-certificate-button" data-dismiss="modal" disabled="disabled">Download</button>
            </div>
        </div>
    </div>
</div>